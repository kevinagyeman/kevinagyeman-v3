---
import Footer from '@/components/astro/Footer.astro';
import Navbar from '@/components/Navbar';
import '@/styles/global.css';
import { SEO } from 'astro-seo';
import type { Seo } from '@/types/seo-type';
import { getResourceUrl } from '@/utils/utils';

const props = Astro.props as { content: Seo };
const { content } = props;

const seoImage =
	getResourceUrl(content.image) || 'https://www.kevinagyeman.com/cover.png';
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    return window.matchMedia('(prefers-color-scheme: dark)').matches
      ? 'dark'
      : 'light';
  };
  const isDark = getThemePreference() === 'dark';
  document.documentElement.classList[isDark ? 'add' : 'remove']('dark');

  if (typeof localStorage !== 'undefined') {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['class'],
    });
  }
</script>

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, viewport-fit=cover'
    />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <SEO
      title={content.title}
      description={content.description}
      openGraph={{
        basic: {
          title: content.title || 'Kevin Agyeman',
          type: 'website',
          image: seoImage,
        },
        image: {
          url: seoImage,
        },
      }}
      twitter={{
        creator: '@kevinagyeman_',
      }}
      extend={{
        link: [{ rel: 'icon', href: '/favicon.svg' }],
        meta: [
          {
            name: 'twitter:image',
            content: seoImage,
          },
          { name: 'twitter:title', content: content.title },
          { name: 'twitter:description', content: content.description },
        ],
      }}
    />
  </head>
  <body>
    <div class='flex min-h-screen flex-col'>
      <Navbar client:visible />
      <div class='flex-grow container mx-auto px-4'>
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
