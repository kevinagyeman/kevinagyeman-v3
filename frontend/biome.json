{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*",
			"tests/**/*",
			"!src/components/ui",
			"!src/components/kibo-ui",
			"!src/styles"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "off",
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": "off"
			},
			"a11y": {
				"recommended": true
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off",
				"recommended": true
			}
		}
	}
}
